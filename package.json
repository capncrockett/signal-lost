{
  "name": "signal-lost",
  "version": "0.1.0",
  "description": "A lo-fi, pixel-art narrative exploration game",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "postinstall": "npx playwright install",
    "test": "jest",
    "test:e2e": "playwright test --reporter=list",
    "test:e2e:ci": "cross-env CI=true playwright test",
    "test:e2e:report": "playwright test",
    "test:e2e:show-report": "playwright show-report",
    "test:visual": "playwright test --config=playwright.visual.config.ts",
    "test:visual:update": "cross-env UPDATE_SNAPSHOTS=true playwright test --config=playwright.visual.config.ts",
    "test:visual:report": "playwright test --config=playwright.visual.config.ts --reporter=html && playwright show-report",
    "test:performance": "node scripts/run-performance-tests.js",
    "test:performance:update": "node scripts/run-performance-tests.js --update-baseline",
    "build:performance": "webpack --config webpack.performance.config.js",
    "coverage": "jest --coverage --coverageReporters=text",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "prepare": "husky",
    "type-check": "tsc --noEmit",
    "unused-check": "tsc --noEmit --noUnusedLocals --noUnusedParameters",
    "lint:tests": "eslint tests/**/*.ts e2e/**/*.ts --max-warnings=0",
    "check-all": "npm run lint && npm run lint:tests && npm run type-check && npm run unused-check && npm run test && npm run test:e2e:ci"
  },
  "keywords": [
    "game",
    "phaser",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.0",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^4.4.11",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "phaser": "3.60.0",
    "tone": "^15.0.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
